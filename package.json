{
	"name": "devpad-monorepo",
	"version": "1.0.0",
	"description": "Devpad project management tool monorepo",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"build": "bun run --filter=@devpad/* build",
		"build:api": "cd packages/schema && bun run build && cd ../api && bun run build",
		"dev": "PUBLIC_API_SERVER_URL=http://localhost:3001/api/v1 bun run --filter=@devpad/app dev",
		"dev:server": "DATABASE_FILE=../../database/local.db bun run --filter=@devpad/worker dev",
		"dev:blog": "PUBLIC_API_SERVER_URL=http://localhost:3001/api/v1 bun run --filter=@devpad/blog-app dev",
		"dev:media": "PUBLIC_API_SERVER_URL=http://localhost:3001/api/v1 bun run --filter=@devpad/media-app dev",
		"dev:all": "DATABASE_FILE=database/local.db concurrently \"bun run dev\" \"bun run dev:server\" \"bun run dev:blog\" \"bun run dev:media\"",
		"test": "bun run --filter=@devpad/* test",
		"test:unit": "bun test unit",
		"test:integration": "bun test integration/ --max-concurrency 1",
		"test:all": "bun run test:unit && bun run test:integration",
		"e2e": "playwright test",
		"e2e:ui": "playwright test --ui",
		"e2e:local": "TEST_ENV=local playwright test",
		"e2e:local:ui": "TEST_ENV=local playwright test --ui",
		"coverage": "./scripts/test-coverage.sh",
		"coverage:report": "./scripts/coverage-report.sh",
		"coverage:view": "genhtml coverage/lcov.info -o coverage/html && open coverage/html/index.html",
		"clean": "bun run --filter=@devpad/* clean",
		"clean:all": "rm -rf packages/*/dist coverage/ && find packages -name '*.js' -delete 2>/dev/null || true && find packages -name '*.d.ts' ! -name 'env.d.ts' -delete 2>/dev/null || true && find packages -name '*.map' -delete 2>/dev/null || true",
		"format": "biome format . --write",
		"format:check": "biome format .",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"build:worker": "bun scripts/build-unified.ts"
	},
	"overrides": {
		"drizzle-orm": "^0.44.7"
	},
	"resolutions": {
		"drizzle-orm": "^0.44.7"
	},
	"packageManager": "bun@1.0.0",
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@playwright/test": "^1.55.0",
		"@types/node": "^24.3.0",
		"concurrently": "^9.2.1",
		"playwright": "^1.55.0"
	}
}
