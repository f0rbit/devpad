{
	"name": "@devpad/api",
	"version": "0.1.0",
	"description": "TypeScript client library for the Devpad API - project and task management made simple",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bunx tsc",
		"build:watch": "tsc --watch",
		"test": "bun test",
		"test:unit": "bun test tests/unit/",
		"test:integration": "bun test tests/integration/",
		"test:coverage": "bun test --coverage",
		"lint": "bun run eslint",
		"prepublishOnly": "bun run build",
		"clean": "rm -rf dist"
	},
	"keywords": [
		"devpad",
		"api",
		"client",
		"typescript",
		"project-management",
		"task-management"
	],
	"author": {
		"name": "f0rbit",
		"url": "https://github.com/f0rbit"
	},
	"license": "MIT",
	"homepage": "https://devpad.tools",
	"repository": {
		"type": "git",
		"url": "https://github.com/f0rbit/devpad.git",
		"directory": "packages/api"
	},
	"bugs": {
		"url": "https://github.com/f0rbit/devpad/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@devpad/schema": "workspace:*",
		"drizzle-orm": "^0.30.6",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/node": "^20.11.24",
		"bun-types": "latest",
		"eslint": "^8.57.0",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"drizzle-orm": "^0.30.6"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
