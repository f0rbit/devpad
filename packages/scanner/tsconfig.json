{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"types": ["bun-types"]
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"]
}
