{
	"name": "@devpad/mcp",
	"version": "2.0.0",
	"description": "MCP server for devpad - exposes devpad API functionality via Model Context Protocol",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"devpad-mcp": "dist/index.js"
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target node",
		"dev": "bun run src/index.ts",
		"clean": "rm -rf dist",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"@devpad/api": "workspace:*",
		"@devpad/schema": "workspace:*",
		"@modelcontextprotocol/sdk": "^1.17.5",
		"zod": "^3.22.4",
		"zod-to-json-schema": "^3.24.6"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"typescript": "^5.0.0"
	},
	"files": [
		"dist",
		"README.md"
	],
	"keywords": [
		"mcp",
		"model-context-protocol",
		"devpad",
		"todo",
		"project-management",
		"task-management",
		"ai-tools"
	],
	"author": {
		"name": "f0rbit",
		"url": "https://github.com/f0rbit"
	},
	"license": "MIT",
	"homepage": "https://devpad.tools",
	"repository": {
		"type": "git",
		"url": "https://github.com/f0rbit/devpad.git",
		"directory": "packages/mcp"
	},
	"bugs": {
		"url": "https://github.com/f0rbit/devpad/issues"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
