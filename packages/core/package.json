{
	"name": "@devpad/core",
	"version": "0.1.0",
	"description": "Core business logic and services for Devpad",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./services": {
			"types": "./dist/services/index.d.ts",
			"import": "./dist/services/index.js"
		},
		"./auth": {
			"types": "./dist/auth/index.d.ts",
			"import": "./dist/auth/index.js"
		},
		"./data": {
			"types": "./dist/data/index.d.ts",
			"import": "./dist/data/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc --watch",
		"test": "bun test",
		"clean": "rm -rf dist",
		"dev": "tsc --watch"
	},
	"dependencies": {
		"@devpad/schema": "workspace:*",
		"drizzle-orm": "^0.30.6",
		"zod": "^3.22.4",
		"arctic": "^1.5.0",
		"lucia": "^3.1.1",
		"oslo": "^1.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.11.24",
		"typescript": "^5.9.2"
	},
	"keywords": [
		"devpad",
		"core",
		"business-logic",
		"services"
	],
	"author": {
		"name": "f0rbit",
		"url": "https://github.com/f0rbit"
	},
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0"
	}
}
