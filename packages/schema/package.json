{
	"name": "@devpad/schema",
	"version": "1.0.0",
	"description": "Database schema, validation, and types for Devpad",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./database": {
			"types": "./dist/database/index.d.ts",
			"import": "./dist/database/index.js"
		},
		"./database/server": {
			"types": "./dist/database/server.d.ts",
			"import": "./dist/database/server.js"
		},
		"./database/d1": {
			"types": "./dist/database/d1.d.ts",
			"import": "./dist/database/d1.js"
		},
		"./database/unified": {
			"types": "./dist/database/unified.d.ts",
			"import": "./dist/database/unified.js"
		},
		"./database/blog": {
			"types": "./dist/database/blog.d.ts",
			"import": "./dist/database/blog.js"
		},
		"./database/media": {
			"types": "./dist/database/media.d.ts",
			"import": "./dist/database/media.js"
		},
		"./bindings": {
			"types": "./dist/bindings.d.ts",
			"import": "./dist/bindings.js"
		},
		"./validation": {
			"types": "./dist/validation/index.d.ts",
			"import": "./dist/validation/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/types/index.js"
		}
	},
	"scripts": {
		"build": "tsc && cp -r src/database/drizzle dist/database/",
		"dev": "tsc --watch",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@f0rbit/corpus": "^0.3.4",
		"drizzle-orm": "^0.30.6",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20241205.0",
		"@types/node": "^20.11.24",
		"typescript": "^5.3.3"
	}
}
