---
import PageLayout from '@/layouts/PageLayout.astro';
---

<PageLayout title="Unauthorized - devpad">
	<div class="error-page">
		<div class="error-content">
			<h1 class="error-code">401</h1>
			<h2 class="error-title">Access Denied</h2>
			<p class="error-description">
				You need to be signed in to access this page. Please log in with your GitHub account to continue.
			</p>
			<div class="error-actions">
				<a href="/api/auth/login" class="btn-primary">Sign In with GitHub</a>
				<a href="/" class="btn-secondary">Go Home</a>
			</div>
		</div>
	</div>
</PageLayout>

<style>
	.error-page {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 60vh;
		text-align: center;
	}

	.error-content {
		max-width: 500px;
		margin: 0 auto;
		padding: 2rem;
	}

	.error-code {
		font-size: 6rem;
		font-weight: bold;
		color: #dc2626;
		margin: 0;
		line-height: 1;
	}

	.error-title {
		font-size: 2rem;
		margin: 1rem 0;
		color: #374151;
	}

	.error-description {
		font-size: 1.1rem;
		color: #6b7280;
		margin: 1.5rem 0 2rem 0;
		line-height: 1.6;
	}

	.error-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn-primary, .btn-secondary {
		padding: 0.75rem 1.5rem;
		border-radius: 0.5rem;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s;
	}

	.btn-primary {
		background-color: #dc2626;
		color: white;
	}

	.btn-primary:hover {
		background-color: #b91c1c;
	}

	.btn-secondary {
		background-color: #f3f4f6;
		color: #374151;
		border: 1px solid #d1d5db;
	}

	.btn-secondary:hover {
		background-color: #e5e7eb;
	}
</style>