---
import { getUserProjectMap, getActiveUserTags } from "@devpad/core";
import PageLayout from '@/layouts/PageLayout.astro';
import TaskEditor from '@/components/solid/TaskEditor';

const user = Astro.locals.user;
if (!user) return new Response(null, { status: 401, statusText: "Unauthorized" });

const project_map = await getUserProjectMap(user.id);
const user_tags = await getActiveUserTags(user.id);
---

<PageLayout title={"New Task - devpad"}>
	<main>
		<TaskEditor
			task={{ task: null, codebase_tasks: null, tags: [] }}
			user_tags={user_tags}
			current_tags={[]}
			history={[]}
			user_id={user.id}
			project_map={project_map}
			client:load
		/>
	</main>
</PageLayout>
