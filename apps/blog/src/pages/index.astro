    color: var(--fg-faint);
  }

  .landing-tagline {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--fg-faint);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  /* Editor Mockup */
