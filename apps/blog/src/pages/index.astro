  }

  .api-step__code pre code {
    line-height: 1.5;
  }

  .api-step__code--render {
    padding: 1.5rem 2rem;
  }

  .terminal-prompt {
    color: var(--fg-faint);
    margin-right: 0.5rem;
  }

  .render-preview {
    width: 100%;
    max-width: 140px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.75rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    background: var(--bg);
  }

  .render-line {
    height: 8px;
    background: var(--border);
    border-radius: 2px;
