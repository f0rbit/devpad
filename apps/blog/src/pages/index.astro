    color: var(--fg);
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .mockup-divider {
    background: var(--border);
  }

  .mockup-preview {
    padding: 1rem;
    color: var(--fg);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

