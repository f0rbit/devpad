---
import HowItWorks from "../solid/HowItWorks";
---

<section class="landing-section">
	<HowItWorks client:load />
</section>

<style>
	.landing-section {
		max-width: 1000px;
		margin: 0 auto;
		padding: calc(var(--space-xl) * 1.5) var(--space-md);
		width: 100%;
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		gap: var(--space-lg);
	}
</style>

<style is:global>
	.how-it-works-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 24px;
	}

	.how-it-works-section h2 {
		text-align: center;
	}

	.how-it-works-section .stepper {
		max-width: 800px;
		width: 100%;
	}

	@media (max-width: 768px) {
		.how-it-works-section .stepper {
			max-width: 400px;
		}
	}
</style>
