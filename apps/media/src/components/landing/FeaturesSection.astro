---
type Feature = {
	icon: "clock" | "users" | "shield";
	title: string;
	description: string;
};

const FEATURES: Feature[] = [
	{
		icon: "clock",
		title: "Unified Timeline",
		description: "See commits, posts, and social activity in one chronological stream. Group commits by repository and expand pull requests to see individual changes.",
	},
	{
		icon: "users",
		title: "Profile Sharing",
		description: "Create multiple profiles to organize different contexts. Share a public timeline on your portfolio or keep it private for personal tracking.",
	},
	{
		icon: "shield",
		title: "Privacy-first",
		description: "AES-256 encrypted tokens stored securely. Your connection credentials are never exposed through the API or shared with third parties.",
	},
];
---

<section class="landing-section">
	<h2 class="section-title">Why Media Timeline</h2>
	<div class="grid grid-3">
		{FEATURES.map((feature) => (
			<div class="card card-flat">
				<div class="row" style="gap: var(--space-sm); margin-bottom: var(--space-sm);">
					<span class="card-icon">
						{feature.icon === "clock" && (
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
								<circle cx="12" cy="12" r="10" />
								<polyline points="12 6 12 12 16 14" />
							</svg>
						)}
						{feature.icon === "users" && (
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
								<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
								<circle cx="9" cy="7" r="4" />
								<path d="M22 21v-2a4 4 0 0 0-3-3.87" />
								<path d="M16 3.13a4 4 0 0 1 0 7.75" />
							</svg>
						)}
						{feature.icon === "shield" && (
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
								<path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z" />
							</svg>
						)}
					</span>
					<h3 class="card-title">{feature.title}</h3>
				</div>
				<p class="card-description">{feature.description}</p>
			</div>
		))}
	</div>
</section>

<style>
	.landing-section {
		max-width: 1000px;
		margin: 0 auto;
		padding: calc(var(--space-xl) * 1.5) var(--space-md);
		width: 100%;
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		gap: var(--space-lg);
	}

	.section-title {
		text-align: center;
		margin: 0;
	}

	@media (max-width: 768px) {
		.grid-3 {
			grid-template-columns: 1fr;
		}
	}
</style>
