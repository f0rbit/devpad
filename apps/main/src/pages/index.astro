---
import DevpadLogo from "@/components/solid/DevpadLogo";
import GithubLogin from "@/components/solid/GithubLogin";
import Layout from "@/layouts/Layout.astro";
import { Badge, Button, Tab, TabList, TabPanel, Tabs } from "@f0rbit/ui";

const keywords = [
	"devpad",
	"tasks",
	"projects",
	"management",
	"developers",

	"project management",
	"task tracking",
	"code scanning",
	"github integration",
	"todo comments",
	"developer tools",
	"task automation",
	"project visibility",
	"api integration",
	"task filtering",
	"project updates",
	"task priorities",
	"codebase tasks",
	"project milestones",
	"task editor",
	"project goals",

	"developer project management",
	"github task tracking",
	"todo comment scanning",
	"project management api",
	"task management tools",
];
---

<Layout
	title="devpad"
	description="devpad.tools provides project and task management for developers. The main feature is automatic scanning of github repos to extract the todo comments"
	keywords={keywords}
	canonical="https://devpad.tools"
>
	<body>
		<nav class="landing-nav row row-between">
			<a href="/" class="row" style="gap: var(--space-sm); text-decoration: none; color: inherit;">
				<DevpadLogo size={24} client:load />
				<span class="font-medium">devpad</span>
			</a>
			<GithubLogin client:load />
		</nav>

		<section class="landing-hero">
			<div class="dot-grid"></div>
			<div class="cluster" style="justify-content: center;">
				<Badge client:load variant="default">TypeScript</Badge>
				<Badge client:load variant="default">Open Source</Badge>
				<Badge client:load variant="default">MIT License</Badge>
			</div>
			<h1 style="font-size: 2.5rem; font-weight: 600; margin: 0;">devpad</h1>
			<p class="text-lg text-muted hero-description">
				a suite of tools for the development lifecycle. manage projects, scan codebases for tasks, publish technical writing, and track your digital footprint.
			</p>
			<div class="row">
				<a href="/project" style="text-decoration: none;">
					<Button client:load variant="primary">get started</Button>
				</a>
				<a href="/docs" style="text-decoration: none;">
					<Button client:load variant="secondary">view docs</Button>
				</a>
			</div>
		</section>

		<section class="landing-section">
			<h2 class="section-title text-xl font-bold">features</h2>
			<div class="grid grid-2">
				<div class="card card-flat">
					<div class="row" style="gap: var(--space-sm); margin-bottom: var(--space-sm);">
						<span class="card-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"/><path d="M2 10h20"/></svg>
						</span>
						<h3 class="card-title">Project Management</h3>
					</div>
					<p class="card-description">organize your projects with GitHub integration, milestone tracking, and automatic versioning. link repositories, set goals, and track progress from a single dashboard.</p>
				</div>
				<div class="card card-flat">
					<div class="row" style="gap: var(--space-sm); margin-bottom: var(--space-sm);">
						<span class="card-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
						</span>
						<h3 class="card-title">Task Scanning</h3>
					</div>
					<p class="card-description">scan your codebase for @todo comments and extract them as trackable tasks. automatic detection with smart tagging, priority assignment, and diff-based updates.</p>
				</div>
				<div class="card card-flat">
					<div class="row" style="gap: var(--space-sm); margin-bottom: var(--space-sm);">
						<span class="card-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
						</span>
						<h3 class="card-title">Blog Platform</h3>
					</div>
					<p class="card-description">write and publish with a full markdown editor. organize with categories and tags, link posts to projects, and access everything through a REST API.</p>
				</div>
				<div class="card card-flat">
					<div class="row" style="gap: var(--space-sm); margin-bottom: var(--space-sm);">
						<span class="card-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/></svg>
						</span>
						<h3 class="card-title">Media Timeline</h3>
					</div>
					<p class="card-description">aggregate your activity from GitHub, Reddit, Bluesky and more into one timeline. see your digital footprint across platforms in a single view.</p>
				</div>
			</div>
		</section>

		<section class="landing-section">
			<h2 class="section-title text-xl font-bold">your TODOs become real tasks</h2>
			<div class="pipeline">
				<div class="card card-flat pipeline-code">
					<div class="row" style="gap: var(--space-xs); margin-bottom: var(--space-sm);">
						<span class="text-sm text-faint font-mono">src/auth/session.ts</span>
					</div>
					<pre class="font-mono text-sm" style="margin: 0; line-height: 1.6; color: var(--fg-subtle);"><span style="color: var(--fg-faint);">1</span>  export async function refresh(
<span style="color: var(--fg-faint);">2</span>    session: Session
<span style="color: var(--fg-faint);">3</span>  ) &#123;
<span style="color: var(--fg-faint);">4</span>    const token = session.token;
<span style="color: var(--fg-faint);">5</span>
<span class="todo-highlight"><span style="color: var(--fg-faint);">6</span>    // @todo implement token refresh</span>
<span class="todo-highlight"><span style="color: var(--fg-faint);">7</span>    // with retry logic</span>
<span style="color: var(--fg-faint);">8</span>
<span style="color: var(--fg-faint);">9</span>    return &#123; expired: true &#125;;
<span style="color: var(--fg-faint);">10</span> &#125;</pre>
				</div>
				<div class="pipeline-arrow">
					<svg width="40" height="24" viewBox="0 0 40 24" fill="none" stroke="var(--fg-faint)" stroke-width="1.5">
						<path d="M0 12h32M28 6l6 6-6 6" stroke-linecap="round" stroke-linejoin="round"/>
					</svg>
				</div>
				<div class="card card-flat pipeline-task">
					<div class="flex-col" style="gap: 3px;">
						<div>
							<span class="progress-icon"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/></svg></span>
							<span class="task-title">implement token refresh with retry logic</span>
						</div>
						<p class="task-summary">src/auth/session.ts &middot; line 6</p>
						<div class="flex-col" style="font-size: small; gap: 6px;">
							<span class="flex-row">
								<span class="tag-dot" style="background: var(--text-link);"></span>
								<span style="color: var(--fg-muted);">auth</span>
							</span>
							<span class="flex-row priority-high">
								<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
								<span>unstarted</span>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="pipeline-steps">
				<div class="pipeline-step">
					<div class="pipeline-step-num">1</div>
					<div class="pipeline-step-title text-sm font-medium">comment written</div>
					<div class="pipeline-step-desc text-xs text-faint">you write a @todo in any source file</div>
				</div>
				<div class="pipeline-step-divider"></div>
				<div class="pipeline-step">
					<div class="pipeline-step-num">2</div>
					<div class="pipeline-step-title text-sm font-medium">scan detects it</div>
					<div class="pipeline-step-desc text-xs text-faint">devpad scans your repo on each push</div>
				</div>
				<div class="pipeline-step-divider"></div>
				<div class="pipeline-step">
					<div class="pipeline-step-num">3</div>
					<div class="pipeline-step-title text-sm font-medium">task tracked</div>
					<div class="pipeline-step-desc text-xs text-faint">appears on your dashboard with file + line ref</div>
				</div>
			</div>
		</section>

		<section class="landing-section">
			<h2 class="section-title text-xl font-bold">everything connects</h2>
			<Tabs client:load defaultValue="projects">
				<TabList>
					<Tab value="projects">projects</Tab>
					<Tab value="tasks">tasks</Tab>
					<Tab value="blog">blog</Tab>
					<Tab value="api">api</Tab>
					<Tab value="media">media</Tab>
				</TabList>
				<TabPanel value="projects">
					<p class="text-sm text-muted" style="margin-bottom: var(--space-md);">track every project with status, version, and linked resources.</p>
					<div class="grid grid-3">
						<div class="card flex-col" style="gap: 3px;">
							<div><span class="task-title">game-engine</span></div>
							<p class="task-summary">a 2D game engine built with WebGL and TypeScript</p>
							<div style="height: 100%;"></div>
							<div class="flex-col" style="font-size: small; gap: 6px;">
								<span class="flex-row">
									<span style="color: var(--fg-faint);">2 days ago</span>
									<span style="color: color-mix(in srgb, var(--fg-muted) 70%, green); font-weight: 500; margin-left: auto;">Live</span>
								</span>
							</div>
						</div>
						<div class="card flex-col" style="gap: 3px;">
							<div><span class="task-title">blog-theme</span></div>
							<p class="task-summary">a minimal theme for the devpad blog platform</p>
							<div style="height: 100%;"></div>
							<div class="flex-col" style="font-size: small; gap: 6px;">
								<span class="flex-row">
									<span style="color: var(--fg-faint);">5 days ago</span>
									<span style="color: var(--text-link); font-weight: 500; margin-left: auto;">Development</span>
								</span>
							</div>
						</div>
						<div class="card flex-col" style="gap: 3px;">
							<div><span class="task-title">cli-tool</span></div>
							<p class="task-summary">command-line interface for managing devpad resources</p>
							<div style="height: 100%;"></div>
							<div class="flex-col" style="font-size: small; gap: 6px;">
								<span class="flex-row">
									<span style="color: var(--fg-faint);">2 weeks ago</span>
									<span style="color: var(--fg-muted); font-weight: 500; margin-left: auto;">Paused</span>
								</span>
							</div>
						</div>
					</div>
				</TabPanel>
				<TabPanel value="tasks">
					<p class="text-sm text-muted" style="margin-bottom: var(--space-md);">scan your codebase or create tasks manually. filter by project, tag, or priority.</p>
					<div class="stack" style="gap: var(--space-sm);">
						<div class="flex-col" style="gap: 3px;">
							<div>
								<span class="progress-icon"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/></svg></span>
								<span class="task-title">implement token refresh with retry logic</span>
							</div>
							<p class="task-summary">auth module needs graceful retry on token expiry</p>
							<div class="flex-col" style="font-size: small; gap: 6px;">
								<span class="flex-row priority-high">
									<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
									<span>tomorrow</span>
								</span>
							</div>
						</div>
						<div class="flex-col" style="gap: 3px;">
							<div>
								<span class="progress-icon"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><circle cx="12" cy="12" r="3"/></svg></span>
								<span class="task-title">add dark mode toggle</span>
							</div>
							<p class="task-summary">settings page needs a theme switcher component</p>
							<div class="flex-col" style="font-size: small; gap: 6px;">
								<span class="flex-row priority-medium">
									<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
									<span>next week</span>
								</span>
							</div>
						</div>
						<div class="flex-col" style="gap: 3px;">
							<div>
								<span class="progress-icon"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/></svg></span>
								<span class="task-title">write API documentation</span>
							</div>
							<p class="task-summary">document all public endpoints with examples</p>
							<div class="flex-col" style="font-size: small; gap: 6px;">
								<span class="flex-row priority-none">
									<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
									<span>no due date</span>
								</span>
							</div>
						</div>
						<div class="flex-col" style="gap: 3px;">
							<div>
								<span class="progress-icon"><div class="priority-low"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="m9 12 2 2 4-4"/></svg></div></span>
								<span class="task-title" style="text-decoration: line-through; color: var(--fg-faint);">fix login redirect bug</span>
							</div>
							<p class="task-summary">oauth callback was redirecting to wrong page</p>
							<div class="flex-col" style="font-size: small; gap: 6px;">
								<span class="flex-row priority-high">
									<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
									<span>yesterday</span>
								</span>
							</div>
						</div>
					</div>
				</TabPanel>
				<TabPanel value="blog">
					<p class="text-sm text-muted" style="margin-bottom: var(--space-md);">write posts linked to projects. markdown editor with live preview.</p>
					<div class="grid grid-2">
						<div class="card flex-col" style="gap: 3px;">
							<div><span class="task-title">building a game engine from scratch</span></div>
							<p class="task-summary">a deep dive into WebGL rendering pipelines and entity component systems</p>
							<div style="height: 100%;"></div>
							<div class="flex-col" style="font-size: small; gap: 6px;">
								<span class="flex-row">
									<span style="color: var(--fg-faint);">jan 15, 2026</span>
									<span style="color: var(--fg-faint); margin-left: auto;">development</span>
								</span>
							</div>
						</div>
						<div class="card flex-col" style="gap: 3px;">
							<div><span class="task-title">API-first project management</span></div>
							<p class="task-summary">why every feature in devpad is an API call and how to build your own integrations</p>
							<div style="height: 100%;"></div>
							<div class="flex-col" style="font-size: small; gap: 6px;">
								<span class="flex-row">
									<span style="color: var(--fg-faint);">jan 28, 2026</span>
									<span style="color: var(--fg-faint); margin-left: auto;">tutorial</span>
								</span>
							</div>
						</div>
					</div>
				</TabPanel>
				<TabPanel value="api">
					<p class="text-sm text-muted" style="margin-bottom: var(--space-md);">every feature is an API call. build your own dashboard, CLI, or bot.</p>
					<div class="card card-flat" style="background: var(--bg-alt);">
						<pre class="font-mono text-sm" style="margin: 0; overflow-x: auto; color: var(--fg-subtle);"><span style="color: var(--fg-faint);">$</span> curl -s https://api.devpad.tools/v1/tasks \
    -H "Authorization: Bearer dp_sk_..." | jq '.[:2]'

[
  &#123;
    "title": "implement token refresh",
    "priority": "HIGH",
    "progress": "UNSTARTED",
    "project": "game-engine"
  &#125;,
  &#123;
    "title": "add rate limiting",
    "priority": "MEDIUM",
    "progress": "IN_PROGRESS",
    "project": "game-engine"
  &#125;
]</pre>
					</div>
				</TabPanel>
				<TabPanel value="media">
					<p class="text-sm text-muted" style="margin-bottom: var(--space-md);">GitHub, Reddit, Bluesky, YouTube — one feed.</p>
					<div class="stack" style="gap: 0;">
						<div class="flex-col" style="gap: var(--space-xs); padding: var(--space-sm) 0; border-bottom: 1px solid var(--border);">
							<div class="flex-row" style="gap: var(--space-xs);">
								<span class="text-xs text-faint">github</span>
								<span class="text-xs text-faint" style="margin-left: auto;">2 hours ago</span>
							</div>
							<span class="task-title text-sm">pushed 3 commits to f0rbit/engine</span>
						</div>
						<div class="flex-col" style="gap: var(--space-xs); padding: var(--space-sm) 0; border-bottom: 1px solid var(--border);">
							<div class="flex-row" style="gap: var(--space-xs);">
								<span class="text-xs text-faint">reddit</span>
								<span class="text-xs text-faint" style="margin-left: auto;">yesterday</span>
							</div>
							<span class="task-title text-sm">posted in r/typescript about code scanning patterns</span>
						</div>
						<div class="flex-col" style="gap: var(--space-xs); padding: var(--space-sm) 0;">
							<div class="flex-row" style="gap: var(--space-xs);">
								<span class="text-xs text-faint">bluesky</span>
								<span class="text-xs text-faint" style="margin-left: auto;">3 days ago</span>
							</div>
							<span class="task-title text-sm">shared a thread about building developer tools</span>
						</div>
					</div>
				</TabPanel>
			</Tabs>
		</section>

		<section class="landing-section">
			<h2 class="section-title text-xl font-bold">API-first means you own the integration</h2>
			<p class="text-muted" style="text-align: center; max-width: 520px; margin: 0 auto;">every button in devpad is an API call. build your own workflows with the REST API, CLI, or MCP server.</p>

			<div class="arch-flow">
				<div class="arch-layer-label text-xs text-faint font-medium">clients</div>
				<div class="arch-layer">
					<div class="card card-flat arch-card">
						<div class="row" style="gap: var(--space-sm); margin-bottom: var(--space-xs);">
							<span class="card-icon"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 8V4H8"/><rect width="16" height="12" x="4" y="8" rx="2"/><path d="M2 14h2"/><path d="M20 14h2"/><path d="M15 13v2"/><path d="M9 13v2"/></svg></span>
							<h4 class="card-title text-sm">MCP Server</h4>
						</div>
						<p class="card-description text-xs">AI tool integration for Claude, Cursor, and opencode. ask your assistant to create tasks or query data directly.</p>
					</div>
					<div class="card card-flat arch-card">
						<div class="row" style="gap: var(--space-sm); margin-bottom: var(--space-xs);">
							<span class="card-icon"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="4 17 10 11 4 5"/><line x1="12" x2="20" y1="19" y2="19"/></svg></span>
							<h4 class="card-title text-sm">CLI</h4>
						</div>
						<p class="card-description text-xs">command-line interface for scripting and automation. pipe devpad data into other tools or manage projects from your terminal.</p>
					</div>
					<div class="card card-flat arch-card">
						<div class="row" style="gap: var(--space-sm); margin-bottom: var(--space-xs);">
							<span class="card-icon"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2"/><line x1="8" x2="16" y1="21" y2="21"/><line x1="12" x2="12" y1="17" y2="21"/></svg></span>
							<h4 class="card-title text-sm">Web App</h4>
						</div>
						<p class="card-description text-xs">the devpad dashboard at devpad.tools. manage projects, review scanned tasks, write blog posts, and browse your timeline.</p>
					</div>
				</div>

