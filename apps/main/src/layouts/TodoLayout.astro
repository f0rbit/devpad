---
import { getServerApiClient } from "@/utils/api-client";
import PageLayout from "./PageLayout.astro";

interface Props {
	title: string;
}

const { project_id } = Astro.params;
if (!project_id) return new Response(null, { status: 400, statusText: "Bad Request" });

const { title } = Astro.props;

const user = Astro.locals.user;
if (!user) return new Response(null, { status: 401, statusText: "Unauthorized" });

const sub_pages = [
	{ name: "info", href: "/" },
	{ name: "update", href: "/update" },
	{ name: "config", href: "/config" },
	{ name: "tasks", href: "/tasks" },
];

const apiClient = getServerApiClient(Astro.locals);

const { project, error } = await apiClient.projects.getByName(project_id);
if (error || !project) return new Response(null, { status: 404, statusText: "Project not found" });

if (project.owner_id !== user.id) return new Response(null, { status: 403, statusText: "Access denied" });
---

<PageLayout title={title}>
	<main>
		<h2>{project.name}</h2>
		<nav>
			{sub_pages.map(({ name, href }) => <a href={`/todo/${project.id}${href}`}>{name}</a>)}
		</nav>
		<br />
		<section id="content">
			<slot />
		</section>
	</main>
</PageLayout>
